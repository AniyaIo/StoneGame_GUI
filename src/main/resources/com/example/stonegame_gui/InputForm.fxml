<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="200.0" maxWidth="300.0" minHeight="200.0" minWidth="300.0" prefHeight="200.0" prefWidth="300.0" spacing="200.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.stonegame_gui.InputFormController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <children>
      <SplitPane dividerPositions="0.5, 0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
        <items>
            <Pane maxHeight="60.0" minHeight="7.0" prefHeight="7.0" prefWidth="278.0">
               <children>
                  <Label fx:id="stonesLabel" layoutX="94.0" layoutY="14.0" prefHeight="17.0" prefWidth="90.0" text="現在の石の数:25" />
               </children>
            </Pane>
            <AnchorPane layoutX="10.0" layoutY="10.0" maxHeight="179.0" minHeight="60.0" minWidth="0.0" prefHeight="60.0" prefWidth="278.0">
               <children>
                  <Label fx:id="playerNamelabel" layoutX="94.0" layoutY="1.0" prefHeight="12.0" prefWidth="90.0" text="プレイヤー1">
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="inputStoneTakeCount" alignment="CENTER" layoutX="65.0" layoutY="19.0" promptText="取る石の数を入力してください" />
               </children>
            </AnchorPane>
            <AnchorPane layoutX="10.0" layoutY="10.0" maxHeight="60.0" minHeight="60.0" minWidth="0.0" prefHeight="60.0">
               <children>
                  <Button fx:id="takeStoneBT" layoutX="110.0" layoutY="17.0" mnemonicParsing="false" text="石を取る" onAction="#onTakeStoneClick" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</VBox>
